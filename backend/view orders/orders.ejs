<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
 
     <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous" defer></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous" defer></script>
     <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous" defer></script>
     <script defer src="orders.js"></script>
    </head>
<body>
     
    <section class="orders">
        <div class="accordion" id="accordionExample">

            <% orders.forEach(order=>{ %>

                <%
                    let userCred = order.userCred;
                    let items = order.items;
                %>
        

            <div class="card m-3 mt-4">
                <div class="card-header" id="heading<%=order.docId%>">
                    <div class="container">
                        <ul>
                            <li><strong>Name : </strong> <%= userCred.name %> </li>
                            <li><strong>phno : </strong> <a href="tel:+91<%=userCred.phno%>"> <%= userCred.phno %> </a> </li>
                            <li><strong>addr : </strong> <%= userCred.addr %> </li>
                        </ul>
                    </div>
                    <h5 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#<%=order.docId%>" aria-expanded="true" aria-controls="collapseOne">
                            <%= order.docId %>
                        </button>
                    </h5>
                </div>
    
                <div id="<%= order.docId %>" class="collapse" aria-labelledby="heading<%=order.docId%>" data-parent="#accordionExample">
                   <div class="card-body d-flex flex-column justify-content-space-around align-items-center">

                        <table class="table table-striped">
                        <thead class="thead-dark">
                          <tr>
                            <th scope="col">Item</th>
                            <th scope="col">Qty</th>
                            <th scope="col">Price</th>
                            <th scope="col">Total</th>
                          </tr>
                        </thead>
                        <tbody>

                            <% items.forEach(item=>{ %>

                                <tr>
                                    <th><%= item.name %></th>
                                    <th><%= item.qty %></th>
                                    <th><%= item.price %></th>
                                    <th><%= item.total %></th>
                                </tr>

                            <% }) %>        
                            
                        </tbody>
                      </table>

                      <p><strong>Gross Total : </strong> <%= order.grossTotal %> </p>

                      <button class="btn btn-danger delete-btn" id="collapseOne" type="button" data-toggle="modal" data-target="#myModalCenter"> Delete Order </button>

                   </div>
                </div>
            </div>

            <% }) %>
        
        </div>
    </section>

    <div class="modal fade" id="myModalCenter" tabindex="-1" role="dialog" aria-labelledby="myModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLongTitle">Are You Sure to delete?</h5>
                    <button type="button" class="close cross-modal" data-dismiss="modal" aria-labelledby="myModalCenterTitle">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="order-id alert alert-secondary"></div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger delete-modal" data-dismiss="modal">Delete</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>